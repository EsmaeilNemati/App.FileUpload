@model List<Application.ViewModel.Customers.CustomerViewModel>

<div class="container mt-5">
    <h2>لیست مشتریان</h2>
    <a asp-action="Create" class="btn btn-success mb-3">افزودن مشتری جدید</a>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>شناسه</th>
                <th>نام</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>