@model Application.ViewModel.AttachmentType.AttachmentTypeViewModel

<div class="container mt-5">
    <h2>افزودن نوع پیوست</h2>
    <form asp-action="Create" class="p-4 bg-light rounded shadow">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
